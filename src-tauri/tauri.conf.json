{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PromptPad",
  "version": "0.1.0",
  "identifier": "net.pisum.promptpad",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "launcher",
        "title": "PromptPad",
        "width": 650,
        "height": 200,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "center": true,
        "visible": true,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
