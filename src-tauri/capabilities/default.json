{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default permissions for PromptPad",
  "windows": ["launcher"],
  "permissions": [
    "core:default",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister",
    "global-shortcut:allow-is-registered",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-text",
    "positioner:default",
    "autostart:default",
    "fs:default",
    "shell:allow-open",
    "core:path:allow-resolve-directory",
    "dialog:allow-open",
    "dialog:allow-message",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$HOME/.prompt-pad.json" },
        { "path": "$HOME/.prompt-pad" },
        { "path": "$HOME/.prompt-pad/**" },
        { "path": "$HOME/Documents/**" },
        { "path": "$HOME/Desktop/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        { "path": "$HOME/.prompt-pad" },
        { "path": "$HOME/.prompt-pad/**" },
        { "path": "$HOME/Documents/**" },
        { "path": "$HOME/Desktop/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        { "path": "$HOME/.prompt-pad/**" },
        { "path": "$HOME/Documents/**" },
        { "path": "$HOME/Desktop/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-rename",
      "allow": [
        { "path": "$HOME/.prompt-pad/**" },
        { "path": "$HOME/Documents/**" },
        { "path": "$HOME/Desktop/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "$HOME/.prompt-pad" },
        { "path": "$HOME/.prompt-pad/**" },
        { "path": "$HOME/Documents/**" },
        { "path": "$HOME/Desktop/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$HOME/.prompt-pad.json" },
        { "path": "$HOME/.prompt-pad/**" },
        { "path": "$HOME/Documents/**" },
        { "path": "$HOME/Desktop/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$HOME/.prompt-pad.json" },
        { "path": "$HOME/.prompt-pad/**" },
        { "path": "$HOME/Documents/**" },
        { "path": "$HOME/Desktop/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [
        { "path": "$HOME/.prompt-pad/**" },
        { "path": "$HOME/Documents/**" },
        { "path": "$HOME/Desktop/**" },
        { "path": "$HOME/**" }
      ]
    }
  ]
}
